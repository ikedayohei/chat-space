.side
  .side__header
    .side__header__box
      %h3.side__header__box__user-name
        = current_user.name
      %ul.side__header__box__menu
        %li.side__header__box__menu__new-group
          =link_to new_group_path do
            =icon('fas','edit')
        %li.side__header__box__menu__menu
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'icon')
  
  .groups
    - current_user.groups.each do |group|
      .group
        =link_to "#" ,class: "group" do
          .group__group-name
            = group.name
        =link_to "#",class: "latest" do
          %p.group__latest-message
